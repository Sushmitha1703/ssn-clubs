<% if(success && success.length){ %> 
    <div class="row" style="background-color:transparent;" >
    <div class="alert alert-success alert-dismissible fade show col-md-6 offset-3 mt-2" role="alert">
       <%= success %>
       <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> 
    </div>
    </div>
    <% } %> 
<% if(error && error.length){ %> 
       <div class="row" style="background-color:transparent;">
        <div class="alert alert-danger alert-dismissible fade show col-md-6 offset-3 mt-2" role="alert">
           <%= error %>
           <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> 
        </div>
        </div>
<% } %> 