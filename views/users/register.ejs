<% layout('./layout/boilerplate') %>
<link rel="stylesheet" href="/public/stylesheets/register.css">
<h1 class="text-center">Login</h1>
<body>
  <section>
      <div class ="box">
          <div class="heading">
              <div class="neon">SSN </div>
              <div class="flux">CLUBS </div>
          </div>
          <div class ="container">
              <div class="form">
                  <h2>Registration Form</h2>
                  <form action="/register" method="post" >
                      <div class ="inputBox">
                          <input type="text" id="username" name="username" placeholder="username" required>
                      </div>
                      <div class ="inputBox">
                          <input  type="email" id="email" name="email" placeholder="email" required>
                      </div>
                      <div class ="inputBox">
                          <input type="password" id="password" name="password" placeholder="password" required>
                      </div>
                      <div class ="inputBox">
                        <input type="text" id="dept" name="dept" placeholder="department" required>
                    </div>
                    <div class ="inputBox">
                      <input type="text" id="year" name="year" placeholder="year" required>
                  </div>
                      <button class="btn btn-md">submit</button>
                      <p style="color:#fff;">already have an account? <a href="/login">login</a></p>
                  </form>
              </div>
          </div>
      </div>
  </section>
</body>
</html>























